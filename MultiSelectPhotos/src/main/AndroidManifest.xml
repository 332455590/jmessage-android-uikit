<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.jmessage.android.uikit">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/noTitle">
        <activity android:name="cn.jmessage.android.uikit.groupchatdetail.GroupDetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="cn.jmessage.android.uikit.BrowserViewPagerActivity"
            android:theme="@style/noTitle"/>
        <activity android:name="cn.jmessage.android.uikit.PickPictureActivity"
            android:theme="@style/noTitle"/>
    </application>

</manifest>
