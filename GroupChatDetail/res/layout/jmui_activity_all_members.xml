<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f3">

    <RelativeLayout
        android:id="@+id/jmui_title_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6599E4" >

        <ImageButton
            android:id="@+id/jmui_return_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/jmui_back_btn"
            android:background="@drawable/jmui_back_btn_bg" />

        <TextView
            android:id="@+id/jmui_members_in_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/jmui_return_btn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:text="@string/jmui_members_in_chat"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/jmui_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/jmui_members_in_chat"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/jmui_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/jmui_send_picture_btn_bg"
            android:text="@string/jmui_add"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/jmui_search"
            android:background="#d4d4d4" />

        <EditText
            android:id="@+id/jmui_search_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/jmui_text_cursor_bg"
            android:textColorHint="@color/gray"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:hint="@string/jmui_search"
            android:textColor="#555555"
            android:background="@drawable/jmui_default_input_bg"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d4d4d4" />

    <ListView
        android:id="@+id/jmui_members_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>